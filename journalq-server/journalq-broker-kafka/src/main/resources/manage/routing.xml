<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<vertx>
    <routes>
        <route name="put" type="PUT" route="true" consumers="application/json;charset=UTF-8"
               produces="application/json;charset=UTF-8"/>
        <route name="post" type="POST" route="true" consumers="application/json;charset=UTF-8"
               produces="application/json;charset=UTF-8"/>
        <route name="get" type="GET" route="true" consumers="application/json;charset=UTF-8"
               produces="application/json;charset=UTF-8"/>
        <route name="delete" type="DELETE" route="true" consumers="application/json;charset=UTF-8"
               produces="application/json;charset=UTF-8"/>
        <!-- monitor -->

        <!-- manage -->
        <!-- group -->
        <route path="/kafka/group/:groupId" inherit="delete"
               handlers="kafkaManageService.removeGroup"/>
        <route path="/kafka/group/:groupId/rebalance" inherit="put"
               handlers="kafkaManageService.rebalanceGroup"/>
    </routes>
</vertx>